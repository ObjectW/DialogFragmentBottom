<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_text_bg"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_bg_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_text_bg_top"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="拍照"
            android:textSize="21sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#55E8E8E8"/>

        <TextView
            android:id="@+id/text_bg_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_text_bg_bottom"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="打开图库"
            android:textSize="21sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/seletcor_bottom_button"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textSize="21sp"
        />

</LinearLayout>